{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@api/*": ["../../packages/api/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/global.d.ts",
    "../../packages/api/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
